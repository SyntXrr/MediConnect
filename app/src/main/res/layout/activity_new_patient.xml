<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/patient_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8FFFE">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/patient_all_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        //patient names

        <View
            android:id="@+id/patient_name2"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#40bcba"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/inpt_patient_img1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_border"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="@+id/textView41"
            app:layout_constraintStart_toStartOf="@+id/textView41"
            app:layout_constraintTop_toBottomOf="@+id/textView41"
            app:srcCompat="@drawable/patient" />

        <ImageView
            android:id="@+id/add_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/circle_image"
            android:onClick="addimg"
            app:layout_constraintEnd_toEndOf="@+id/inpt_patient_img1"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/inpt_patient_img1"
            app:layout_constraintTop_toTopOf="@+id/patient_name2"
            app:srcCompat="@drawable/add" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/raleway"
            android:text="First Name :"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/patient_name2"
            app:layout_constraintTop_toBottomOf="@+id/inpt_patient_img1" />

        <EditText
            android:id="@+id/inpt_patient_first_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/textbox_whiteborder"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/textView29"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView29"
            app:layout_constraintTop_toTopOf="@+id/textView29" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/raleway"
            android:text="Last Name :"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textView29"
            app:layout_constraintHorizontal_bias="0.511"
            app:layout_constraintStart_toStartOf="@+id/textView29"
            app:layout_constraintTop_toBottomOf="@+id/textView29" />

        <EditText
            android:id="@+id/inpt_patient_last_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/textbox_whiteborder"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/textView30"
            app:layout_constraintEnd_toEndOf="@+id/patient_name2"
            app:layout_constraintStart_toEndOf="@+id/textView30"
            app:layout_constraintTop_toBottomOf="@+id/inpt_patient_first_name" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/raleway"
            android:text="DOB :"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView30"
            app:layout_constraintTop_toBottomOf="@+id/textView30" />

        <EditText
            android:id="@+id/patient_dd1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/textbox_whiteborder"
            android:fontFamily="@font/raleway"
            android:hint="DD"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/inpt_patient_last_name"
            app:layout_constraintTop_toBottomOf="@+id/inpt_patient_last_name" />

        <EditText
            android:id="@+id/patient_mm1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/textbox_whiteborder"
            android:fontFamily="@font/raleway"
            android:hint="MM"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/patient_dd1"
            app:layout_constraintStart_toEndOf="@+id/patient_dd1"
            app:layout_constraintTop_toTopOf="@+id/patient_dd1" />

        <EditText
            android:id="@+id/patient_yyyy1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/textbox_whiteborder"
            android:fontFamily="@font/raleway"
            android:hint="YYYY"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/patient_mm1"
            app:layout_constraintStart_toEndOf="@+id/patient_mm1"
            app:layout_constraintTop_toTopOf="@+id/patient_mm1" />

        //contact

        <View
            android:id="@+id/patient_contact"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="5dp"
            android:background="#40bcba"
            app:layout_constraintEnd_toEndOf="@+id/patient_name2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/patient_name2"
            app:layout_constraintTop_toBottomOf="@+id/patient_name2" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/raleway"
            android:text="Phone :"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/patient_contact"
            app:layout_constraintTop_toTopOf="@+id/patient_contact" />

        <EditText
            android:id="@+id/inpt_patient_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/textbox_whiteborder"
            android:ems="10"
            android:inputType="phone"
            android:padding="5dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/textView34"
            app:layout_constraintEnd_toEndOf="@+id/patient_contact"
            app:layout_constraintStart_toEndOf="@+id/textView34"
            app:layout_constraintTop_toTopOf="@+id/textView34"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/raleway"
            android:text="E-mail :"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textView34"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toStartOf="@+id/textView34"
            app:layout_constraintTop_toBottomOf="@+id/textView34" />

        <EditText
            android:id="@+id/inpt_patient_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:background="@drawable/textbox_whiteborder"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/textView35"
            app:layout_constraintEnd_toEndOf="@+id/patient_contact"
            app:layout_constraintStart_toEndOf="@+id/textView35"
            app:layout_constraintTop_toTopOf="@+id/textView35"
            app:layout_constraintVertical_bias="0.476" />

        //address

        <View
            android:id="@+id/patient_address"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="5dp"
            android:background="#40bcba"
            app:layout_constraintEnd_toEndOf="@+id/patient_contact"
            app:layout_constraintStart_toStartOf="@+id/patient_contact"
            app:layout_constraintTop_toBottomOf="@+id/patient_contact" />

        <TextView
            android:id="@+id/textView37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/raleway"
            android:text="Address"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/patient_address"
            app:layout_constraintHorizontal_bias="0.069"
            app:layout_constraintStart_toStartOf="@+id/patient_address"
            app:layout_constraintTop_toTopOf="@+id/patient_address" />

        <EditText
            android:id="@+id/_inpt_patient_add_l1"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/textbox_whiteborder"
            android:ems="10"
            android:inputType="textPostalAddress"
            android:padding="5dp"
            android:text="Line 1"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/patient_address"
            app:layout_constraintStart_toStartOf="@+id/patient_address"
            app:layout_constraintTop_toBottomOf="@+id/textView37" />

        <EditText
            android:id="@+id/_inpt_patient_add_l2"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/textbox_whiteborder"
            android:ems="10"
            android:inputType="textPostalAddress"
            android:padding="5dp"
            android:text="Line 2"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/_inpt_patient_add_l1"
            app:layout_constraintStart_toStartOf="@+id/_inpt_patient_add_l1"
            app:layout_constraintTop_toBottomOf="@+id/_inpt_patient_add_l1" />

        <EditText
            android:id="@+id/_inpt_patient_city"
            android:layout_width="160dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:background="@drawable/textbox_whiteborder"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:text="City"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/_inpt_patient_add_l2"
            app:layout_constraintTop_toBottomOf="@+id/_inpt_patient_add_l2" />

        <EditText
            android:id="@+id/_inpt_patient_pincode"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/textbox_whiteborder"
            android:ems="10"
            android:inputType="number"
            android:padding="5dp"
            android:text="Pincode"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/_inpt_patient_add_l2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/_inpt_patient_city"
            app:layout_constraintTop_toBottomOf="@+id/_inpt_patient_add_l2" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/textbox_whiteborder"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:text="District"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/_inpt_patient_city"
            app:layout_constraintStart_toStartOf="@+id/_inpt_patient_city"
            app:layout_constraintTop_toBottomOf="@+id/_inpt_patient_city" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/textbox_whiteborder"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:text="State"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/_inpt_patient_pincode"
            app:layout_constraintStart_toStartOf="@+id/_inpt_patient_pincode"
            app:layout_constraintTop_toBottomOf="@+id/_inpt_patient_pincode" />

        //issues

        <View
            android:id="@+id/patient_issues"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_marginTop="5dp"
            android:background="#40bcba"
            app:layout_constraintEnd_toEndOf="@+id/patient_address"
            app:layout_constraintStart_toStartOf="@+id/patient_address"
            app:layout_constraintTop_toBottomOf="@+id/patient_address" />

        <TextView
            android:id="@+id/textView38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/raleway"
            android:text="New Issue details"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/patient_issues"
            app:layout_constraintHorizontal_bias="0.069"
            app:layout_constraintStart_toStartOf="@+id/patient_issues"
            app:layout_constraintTop_toTopOf="@+id/patient_issues" />

        <EditText
            android:id="@+id/inpt_issues"
            android:layout_width="340dp"
            android:layout_height="100dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/textbox_whiteborder"
            android:ems="10"
            android:fontFamily="raleway"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:text="Describe your issue "
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/patient_issues"
            app:layout_constraintStart_toStartOf="@+id/patient_issues"
            app:layout_constraintTop_toBottomOf="@+id/textView38"
            tools:fontFamily="@font/raleway" />

        <TextView
            android:id="@+id/textView39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/raleway"
            android:text="Symptoms"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/inpt_issues"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/inpt_issues"
            app:layout_constraintTop_toBottomOf="@+id/inpt_issues" />

        <EditText
            android:id="@+id/inpt_symptoms"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/textbox_whiteborder"
            android:ems="10"
            android:fontFamily="@font/raleway"
            android:gravity="start|top"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:text="cough"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/patient_issues"
            app:layout_constraintStart_toStartOf="@+id/patient_issues"
            app:layout_constraintTop_toBottomOf="@+id/textView39" />

        <EditText
            android:id="@+id/inpt_symptoms1"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/textbox_whiteborder"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:text="fever"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/inpt_symptoms"
            app:layout_constraintStart_toStartOf="@+id/inpt_symptoms"
            app:layout_constraintTop_toBottomOf="@+id/inpt_symptoms" />


        //Treatments

        <Button
            android:id="@+id/btn_new_sym"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/raleway"
            android:text="Add New Symptoms"
            android:textAllCaps="false"
            android:textColor="#40bcba"
            app:layout_constraintBottom_toBottomOf="@+id/patient_issues"
            app:layout_constraintEnd_toEndOf="@+id/patient_issues"
            app:layout_constraintHorizontal_bias="0.59"
            app:layout_constraintStart_toStartOf="@+id/patient_issues" />

        <View
            android:id="@+id/treatments"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginTop="5dp"
            android:background="#40bcba"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="@+id/patient_issues"
            app:layout_constraintStart_toStartOf="@+id/patient_issues"
            app:layout_constraintTop_toBottomOf="@+id/patient_issues" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/raleway"
            android:text="Treatment"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/treatments"
            app:layout_constraintHorizontal_bias="0.059"
            app:layout_constraintStart_toStartOf="@+id/treatments"
            app:layout_constraintTop_toTopOf="@+id/treatments" />

        <EditText
            android:id="@+id/inpt_test2"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/textbox_whiteborder"
            android:ems="10"
            android:fontFamily="@font/raleway"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:text="Test 1"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/treatments"
            app:layout_constraintStart_toStartOf="@+id/treatments"
            app:layout_constraintTop_toBottomOf="@+id/textView40" />

        <EditText
            android:id="@+id/inpt_test3"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/textbox_whiteborder"
            android:ems="10"
            android:fontFamily="@font/raleway"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:text="Test 2"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/inpt_test2"
            app:layout_constraintStart_toStartOf="@+id/inpt_test2"
            app:layout_constraintTop_toBottomOf="@+id/inpt_test2" />

        <Button
            android:id="@+id/btn_new_treatment"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/raleway"
            android:text="New Treatment"
            android:textAllCaps="false"
            android:textColor="#40bcba"
            app:layout_constraintBottom_toBottomOf="@+id/treatments"
            app:layout_constraintEnd_toEndOf="@+id/inpt_test3"
            app:layout_constraintStart_toStartOf="@+id/inpt_test3" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/textbox_whiteborder"
            android:fontFamily="@font/raleway"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/treatments"
            app:layout_constraintStart_toStartOf="@+id/treatments"
            app:layout_constraintTop_toBottomOf="@+id/treatments" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/raleway"
            android:text="Add New Patient"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/patient_name2"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="@+id/patient_name2"
            app:layout_constraintTop_toTopOf="@+id/patient_name2" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>