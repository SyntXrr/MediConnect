<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8FFFE" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Signin">

        <TextView
            android:id="@+id/txt_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway"
            android:text="Sign In"
            android:textColor="#40bcba"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@+id/icon_signin"
            app:layout_constraintStart_toStartOf="@+id/icon_signin"
            app:layout_constraintTop_toBottomOf="@+id/icon_signin" />

        <ImageView
            android:id="@+id/icon_signin"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/circle_image"
            android:elevation="8px"
            android:padding="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sign_in" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:background="@drawable/textbox_border"
            android:ems="10"
            android:fontFamily="@font/raleway"
            android:inputType="number"
            android:padding="5dp"
            android:textColor="#40bcba"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/userid"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/userid"
            app:layout_constraintTop_toBottomOf="@+id/userid" />

        <TextView
            android:id="@+id/userid"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/raleway"
            android:text="Mobile "
            android:textColor="#40bcba"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/txt_signin"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@+id/txt_signin"
            app:layout_constraintTop_toBottomOf="@+id/txt_signin" />

        <EditText
            android:id="@+id/userPassword"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:background="@drawable/textbox_border"
            android:ems="10"
            android:fontFamily="@font/raleway"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textColor="#40bcba"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/txt_password"
            app:layout_constraintStart_toStartOf="@+id/txt_password"
            app:layout_constraintTop_toBottomOf="@+id/txt_password" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/raleway"
            android:onClick="CheckCred"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:backgroundTint="#40bcba"
            app:cornerRadius="0dp"
            app:iconTint="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/userPassword"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/userPassword"
            app:layout_constraintTop_toBottomOf="@+id/userPassword" />

        <Button
            android:id="@+id/btn_frgt"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:elevation="8px"
            android:fontFamily="@font/raleway"
            android:onClick="forgotPassWin"
            android:text="Forgot User Id / Password"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#40bcba"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toEndOf="@+id/btn_login"
            app:layout_constraintStart_toStartOf="@+id/btn_login"
            app:layout_constraintTop_toBottomOf="@+id/btn_login" />

        <TextView
            android:id="@+id/txt_password"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/raleway"
            android:text="Password"
            android:textColor="#40bcba"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/userid"
            app:layout_constraintStart_toStartOf="@+id/userid"
            app:layout_constraintTop_toBottomOf="@+id/phone" />

        <TextView
            android:id="@+id/warning1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/raleway"
            android:textColor="#ff0000"
            android:textSize="18sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/txt_signin"
            app:layout_constraintStart_toStartOf="@+id/txt_signin"
            app:layout_constraintTop_toBottomOf="@+id/txt_signin" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
